<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
   "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="customer" extends="struts-default" namespace="customer"
		>
		<action name="CustomerAction_" class="com.leo.crm.action.CustomerAction" method="{1}">
			<result name="tohome" type="redirect">/customer/index.jsp</result>
			<allowed-methods>getList</allowed-methods>
		</action>
		<action name="UserAction_" class="com.leo.crm.action.UserAction" method="{1}">
			<result name="tohome" type="redirect">/user/index.jsp</result>
			<allowed-methods>login</allowed-methods>
		</action>
	</package>
	
</struts>